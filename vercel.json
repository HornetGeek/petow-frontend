{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "buildCommand": "npm install && npm run build",
  "outputDirectory": ".next",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.petow.app/api/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "https://api.petow.app/admin/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "https://api.petow.app/media/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "https://api.petow.app/static/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.petow.app/api"
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
} 